<%= link_to "⏎", :back %>
<div class="container">
    <br>
    <h3><%= @type.title%></h3>
    <br>
    <div class="row">

        <div class="card-deck">
            <% @products.each do |product| %>
                <div class="col-md-3">
                    <div class="card mb-4">
                        <div class="view overlay">
                            <img src="<%= product.image_url%>" alt="image" class="card-img-top" width = "100px" height= "150px" >
                                <div class="card-body">
                                    <%= link_to(product.name, product_path(product.id) , class:"card-title", align: "center" ) %>
                                </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>    
    </div>
</div>


